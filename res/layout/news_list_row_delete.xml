<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_selector"
    android:orientation="horizontal"
    android:descendantFocusability="blocksDescendants"
    android:padding="5dip" >

	<!--  ListRow Left sied Thumbnail image -->
<!--         android:background="@drawable/image_bg"  -->
	<LinearLayout android:id="@+id/thumbnailNews" 
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:padding="3dip"		
        android:layout_alignParentLeft="true"
	    android:layout_marginRight="5dip">
        
		<ImageView     
			android:id="@+id/list_imageNews"   
	        android:layout_width="70dip"
	        android:layout_height="100dip"
	        android:src="@drawable/stub"/>
        
	</LinearLayout>
    
	<!-- Title Of Song-->
    <TextView
        android:id="@+id/titleNews"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/thumbnailNews"
        android:layout_toRightOf="@+id/thumbnailNews"
        android:textColor="#ff9800"
        android:text="Game of trons"
        android:textSize="20dip"
        android:textStyle="bold"/>

	<!-- Artist Name -->
    <TextView
        android:id="@+id/episodeTitleNews"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/titleNews"
        android:textColor="#f1f1f1"
        android:text="Capitulo epico"
        android:textSize="13dip"
        android:layout_marginTop="1dip"
        android:layout_toRightOf="@+id/thumbnailNews"/>
    
    <TextView
        android:id="@+id/firstAiredNews"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/episodeTitleNews"
        android:layout_marginTop="5dip"
        android:text="15/11/2013"
        android:layout_toRightOf="@+id/thumbnailNews"
        android:textColor="#f1f1f1"
        android:textSize="13dip" />

